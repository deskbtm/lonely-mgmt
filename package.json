{
  "name": "lonely-mgmt",
  "version": "0.0.1",
  "description": "独立开发者的应用管理工具",
  "author": "maxcalibur",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run prebuild && cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "release": "standard-version",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "setup": "pm2 deploy ecosystem.config.js production setup",
    "migration:generate": "cross-env NODE_ENV=production typeorm migration:generate -n SchemaMigration",
    "migration:run": "cross-env NODE_ENV=production ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "migration:create": "cross-env NODE_ENV=production typeorm migration:create -n SchemaMigration",
    "migration:revert": "cross-env NODE_ENV=production ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "husky:add": "husky add .husky/pre-commit \"npm run lint && git add .\""
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.6.14",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.14",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.14",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.7.16",
    "@nestjs/typeorm": "^7.1.5",
    "@types/node-schedule": "^1.3.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.2.6",
    "fs-extra": "^9.1.0",
    "got": "^11.8.2",
    "handlebars": "^4.7.7",
    "helmet": "^4.4.1",
    "mysql": "^2.18.1",
    "mysqldump": "^3.2.0",
    "nanoid": "^3.1.22",
    "nestjs-redis": "^1.3.3",
    "node-schedule": "^2.0.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "semver": "^7.3.5",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.14",
    "@types/bcrypt": "^3.0.0",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "26.0.20",
    "@types/node": "^14.14.34",
    "@types/passport-local": "^1.0.33",
    "@types/qrcode": "^1.4.0",
    "@types/semver": "^7.3.4",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "pm2": "^4.5.5",
    "prettier": "^2.2.1",
    "standard-version": "^9.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.3",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}